//- for the STF logo, white bar, and navigation
nav.navbar.navbar-default.sub-nav
	.container
		.navbar-header
			button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand.navbar-stf(href='/'): img(src='/img/logo.png')
		.navbar-collapse.collapse
			ul.nav.navbar-nav
				li.dropdown
					a.dropdown-toggle(href='#', data-toggle='dropdown') Proposals 
						span.caret
					ul.dropdown-menu(role='menu')
						li: a(href='/proposals/create') Create New
						li: a(href='/proposals/browse') Browse All
						li: a(href='/proposals/myproposals') My Proposals
						if isAdmin || isCommitteeMember
							li(role='seperator' class='divider')
							li: a(href='/metrics') Metrics
				li.dropdown
					a.dropdown-toggle(href='#', data-toggle='dropdown') Documents
						span.caret
					ul.dropdown-menu(role='menu')
						li: a(href='/documents') Browse
						li: a(href='http://www.washington.edu/itconnect/wares/acquiring-software-and-hardware/keyserver-help-for-it-staff/' target ='_blank') Key Server
						li: a(href='/docs/Current%20Request%20for%20Proposals.pdf' target='_blank') RFP
				li: a(href='/calendar') Calendar


				//- todo li: a(href='#') Explore
			ul.nav.navbar-nav.navbar-right
				if isAdmin
					ul.nav.navbar-nav
						li.dropdown
							a.dropdown-toggle(href='#', data-toggle='dropdown') Admin
								span.caret
							ul.dropdown-menu(role='menu')
								li: a(href='/metrics') Metrics
								li: a(href='/metrics/voting') Voting
								li: a(href='/admin/users') View Users
								li: a(href='/admin/departments') Departments
								li(role='seperator' class='divider')
								li: a(href='/admin/award') Awards
								li: a(href='/admin') Advanced
				if isCommitteeMember
					ul.nav.navbar-nav
						li.dropdown
							a.dropdown-toggle(href='#', data-toggle='dropdown') Committee Member
								span.caret
							ul.dropdown-menu(role='menu')
								li: a(href='/metrics') Metrics
								li: a(href='/metrics/voting') Voting
				li.active
					if netId
						a(href='/user')= netId
					else
						a(href='/loginUser') Login

